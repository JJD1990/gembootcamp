<div class="card m-3">
    <div class="card-header fa fa-user">
        <%= link_to enrollment.user.username, user_path(enrollment.user) %> | 
        Updated 
        <%= time_ago_in_words(enrollment.updated_at) %> ago |
        <%= link_to enrollment.course, course_path(enrollment.course) %>
    </div>
    <div class="card-body">
       <b class="text-warning fa fa-star"> <%= enrollment.rating %></b>
      <small class="fa fa-comment"><%= enrollment.review %></small>  
    </div>
    <% if current_user %>
    <div class="card-footer">
        <% if policy(enrollment).edit? %>
        <%= link_to 'Edit Review', edit_enrollment_path(enrollment) %>  
        <% end %>
    </div>
    <% end %>
</div>